<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/swith_to_complited_button"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="#00FFFFFF"
                android:contentDescription="completed task"
                android:gravity="center"
                app:icon="@drawable/ic_swicth_completed_button"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconTint="#000000"
                app:iconTintMode="multiply" />

            <TextView
                android:id="@+id/task_text"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="start|center_vertical"
                android:text="TextView" />

            <Button
                android:id="@+id/swith_to_favourite_button"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:background="#00FFFFFF"
                android:contentDescription="add to favourate task"
                app:icon="@drawable/ic_switch_favorite_button"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconTint="#323232" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>